# Database Configuration
DATABASE_URL=sqlite:///./cirujano.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/cirujano_db
DATABASE_ECHO=False

# JWT Configuration
# IMPORTANT: set strong values in production (do NOT commit secrets to git)
SECRET_KEY=
JWT_SECRET=
JWT_REFRESH_SECRET=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Debug Mode
DEBUG=False
ENVIRONMENT=development  # set to 'production' in real deployments

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Rate limiting storage (Redis recommended for production). Example: redis://localhost:6379/0
RATE_LIMIT_STORAGE_URI=memory://

# File upload limits (bytes)
IMAGE_MAX_SIZE=5242880  # 5 MB

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@cirujanosintetizadores.cl

# API Configuration
API_TITLE=Cirujano de Sintetizadores API
API_VERSION=1.0.0

# Run `python ../scripts/check_env.py --env-file .env --strict` to validate required production secrets before starting the app.
